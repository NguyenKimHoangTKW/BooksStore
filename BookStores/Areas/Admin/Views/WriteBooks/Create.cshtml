@model BookStores.Models.WriteBook

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card" style="margin-top: 73px">
            <div class="card-body">
                <h4>Thêm người viết sách</h4>
                <h2 style="color:red">@ViewBag.ThongBao</h2>
                <div class="m-t-25">
                    <form id="form-validation">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tên sách*</label>
                            <div class="col-md-5">
                                @Html.DropDownList("idBooks", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tên người viết*</label>
                            <div class="col-md-5">
                                @Html.DropDownList("idAuthor", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Quyền*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="access">
                                @Html.ValidationMessageFor(model => model.access, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Vị trí*</label>
                            <div class="form-group d-flex align-items-center">
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="location">
                                    @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
