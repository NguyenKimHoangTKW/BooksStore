@model IEnumerable<BookStores.Models.Author>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<div class="card" style="margin-top:75px;">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10">

                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a href="@Url.Action("Create", "Author")">
                    <button class="btn btn-primary btn-tone m-r-5">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        Thêm mới tác giả
                    </button>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>

                        <th>STT</th>
                        <th>Tên tác giả</th>
                        <th>Mã tác giả</th>
                        <th>Địa chỉ</th>
                        <th>Tiểu sử</th>
                        <th>Số điện thoại</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>

                            <td>
                                #@i
                            </td>
                            <td>
                                <div class="d-flex align-items-center">

                                    <h6 class="m-b-0">@item.nameAuthor</h6>
                                </div>
                            </td>
                            <td>@item.codeAuthor</td>
                            <td>@item.address</td>
                            <td>@item.story</td>
                            <td>@item.phone</td>
                            <td class="text-right">
                                <a href="/Admin/Author/Edit?id=@item.idAuthor">
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                        <i class="anticon anticon-edit"></i>
                                    </button>
                                </a>
                                <a href="/Admin/Author/Delete?id=@item.idAuthor">
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                                        <i class="anticon anticon-delete"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>