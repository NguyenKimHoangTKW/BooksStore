@model IEnumerable<BookStores.Models.BookCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<div class="card" style="margin-top:75px;">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10">
                        @using (Html.BeginForm("Index", "BookCategories", FormMethod.Get, new { @class = "form-inline" }))
                        {
                            @Html.DropDownList("topicid", null, htmlAttributes: new { @class = "form-control", @style = "min-width: 180px;" })

                            <button class="btn btn-success btn-tone m-r-5">Tìm</button>


                        }
                        @using (Html.BeginForm("Index", "BookCategories", FormMethod.Get, new { @class = "form-inline" }))
                        {

                            <button class="btn btn-warning btn-tone m-r-5" style="margin-top:13px;">Reset</button>

                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a href="@Url.Action("Create", "BookCategories")">
                    <button class="btn btn-primary btn-tone m-r-5">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        Thêm mới thể loại sách
                    </button>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>

                        <th>STT</th>
                        <th>Tên thể loại</th>
                        <th>Mã thể loại</th>
                        <th>Tên Chủ đề</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>

                            <td>
                                @i
                            </td>
                            <td>
                                <div class="d-flex align-items-center">

                                    <h6 class="m-b-0">@item.nameBookCat</h6>
                                </div>
                            </td>
                            <td>@item.codeBookCat</td>
                            <td>@item.Topic.nameTopic</td>

                            <td class="text-right">
                                <a href="/Admin/BookCategories/Edit?id=@item.idBookCat">
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                        <i class="anticon anticon-edit"></i>
                                    </button>
                                </a>
                                <a href="/Admin/BookCategories/Delete?id=@item.idBookCat">
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                                        <i class="anticon anticon-delete"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>