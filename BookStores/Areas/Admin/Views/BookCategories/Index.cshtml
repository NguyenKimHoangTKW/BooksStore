@model PagedList.IPagedList<BookStores.Models.BookCategory>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<div class="card" style="margin-top: 75px;">
    <div class="card-body">
        <div class="row m-b-30">
            @using (Html.BeginForm("Index", "BookCategories", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="col-lg-8">
                    <div class="d-md-flex">

                        <div class="m-b-10 m-r-15">

                            @Html.DropDownList("bookcatid", null, htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="m-b-10">
                            <input type="submit" class="btn btn-danger" value="Tìm">
                        </div>
                    </div>
                </div>


            }
            @using (Html.BeginForm("Index", "BookCategories", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="col-lg-8">
                    <div class="d-md-flex">

                        <div class="m-b-10 m-r-15">
                            <input type="Text" class="form-control" value="@ViewBag.Keyword" name="searchString" placeholder="Nhập tên khách hàng cần tìm">
                        </div>
                        <div class="m-b-10">
                            <input type="submit" class="btn btn-danger" value="Tìm">
                        </div>
                    </div>
                </div>

            }
            <div class="col-lg-4 text-right">
                <a href="@Url.Action("Create", "BookCategories")">
                    <button class="btn btn-primary btn-tone m-r-5">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        Thêm mới thể loại sách
                    </button>
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Mã thể loại sách</th>
                        <th scope="col">@Html.ActionLink("Tên thể loại", "Index", new { sortProperty = "nameBookCat", sortOrder = ViewBag.SortOrder, searchString = ViewBag.Keyword, bookcatid = ViewBag.Subject })</th>
                        <th scope="col">@Html.ActionLink("Tên chủ đề", "Index", new { sortProperty = "idTopic", sortOrder = ViewBag.SortOrder, searchString = ViewBag.Keyword, bookcatid = ViewBag.Subject })</th>
                        <th scope="col">#</th>
                    </tr>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <td>
                                    #@i
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <h6 class="m-b-0 m-l-10">@item.codeBookCat</h6>
                                    </div>
                                </td>
                                <td>@item.nameBookCat</td>
                                <td>@item.Topic.nameTopic</td>
                                <td class="text-right">
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                        <a href="/Admin/BookCategories/Edit?id=@item.idBookCat"><i class="anticon anticon-edit"></i></a>
                                    </button>
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                                        <a href="/Admin/BookCategories/Delete?id=@item.idBookCat"><i class="anticon anticon-delete"></i>
                                    </button>
                                </td>
                            </tr>

                        }
                    }
                </thead>
            </table>
        </div>
        <!-- Thêm mã phân trang -->
        <br />
        <div class="row">
            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6">
                @using (Html.BeginForm("Index", "BookCategories", FormMethod.Get))
                {
                    <p>
                        Kích thước trang: @Html.DropDownList("size", (List<SelectListItem>)ViewBag.Size, new { @onchange = "this.form.submit();", @class = "Product-select", @style = "width: 70px;" })
                    </p>

                    @Html.Hidden("page", (object)ViewBag.Page)
                    @Html.Hidden("sortProperty", (object)ViewBag.SortProperty)
                    @Html.Hidden("sortOrder", (object)ViewBag.SortOrder)
                    @Html.Hidden("searchString", (object)ViewBag.Keyword)
                    @Html.Hidden("categoryID", (object)ViewBag.Subject)
                }
            </div>
            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 text-right">
                <h5 class="text-dark font-weight-semibold" style="margin-right: 20px">Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</h5>
            </div>
        </div>

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, size = ViewBag.CurrentSize, sortProperty = ViewBag.SortProperty, sortOrder = ViewBag.SortOrder, searchString = ViewBag.Keyword }))
        <!-- Kết thúc -->
