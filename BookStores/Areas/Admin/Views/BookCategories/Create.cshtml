@model BookStores.Models.BookCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card" style="margin-top:55px;">
            <div class="card-body">
                <h4>Thêm mới thể loại sách</h4>
                <h2 style="color:red">@ViewBag.ThongBao</h2>
                <div class="m-t-15">
                    <form id="form-validation">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tên thể loại sách*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="nameBookCat">
                                @Html.ValidationMessageFor(model => model.nameBookCat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Thể loại sách*</label>
                            <div class="col-md-5">
                                @Html.DropDownList("idTopic", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.idTopic, "", new { @class = "text-danger" })
                            </div>
                        </div>
                

                        <div class="form-group text-left">
                            <button class="btn btn-success btn-tone m-r-5">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div>
                @Html.ActionLink("Quay về danh sách sản phẩm", "Index")
            </div>
        </div>

    </div>
}