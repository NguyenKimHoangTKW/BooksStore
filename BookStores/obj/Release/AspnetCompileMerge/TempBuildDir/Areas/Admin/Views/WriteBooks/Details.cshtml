@model BookStores.Models.WriteBook

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>

    <dl class="dl-horizontal">
        <div class="card" style=" margin-top: 74px;">
            <div class="card-body">
                <h4 class="card-title">Thông tin người viết sách</h4>
                <div class="table-responsive">
                    <table class="product-info-table m-t-20">
                        <tbody>
                            <tr>
                                <td>Tên sách:</td>
                                <td>
                                    @Html.DisplayFor(model => model.Book.nameBooks)
                                </td>
                            </tr>
                            <tr>
                                <td>Tên người viết:</td>
                                <td>
                                    @Html.DisplayFor(model => model.Author.nameAuthor)
                                </td>
                            </tr>
                            <tr>
                                <td>Quyền:</td>
                                <td>
                                    @Html.DisplayFor(model => model.access)
                                </td>
                            </tr>
                            <tr>
                                <td>Vị trí:</td>
                                <td>
                                    @Html.DisplayFor(model => model.location)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.idWriteBook }) |
    @Html.ActionLink("Back to List", "Index")
</p>
