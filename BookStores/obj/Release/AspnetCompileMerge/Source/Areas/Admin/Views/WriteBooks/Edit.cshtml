@model BookStores.Models.WriteBook

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idWriteBook)


        <div class="card">
            <div class="card-body" style="margin-top: 100px">
                <h4>Sửa thông tin viết sách</h4>
                <h2 style="color:red">@ViewBag.ThongBao</h2>
                <div class="m-t-15">
                    <form id="form-validation">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tên sách*</label>
                            <div class="col-md-5">
                                @Html.DropDownList("idBooks", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.idBooks, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Tên người viết*</label>
                            <div class="col-md-5">
                                @Html.DropDownList("idAuthor", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.idAuthor, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Quyền*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="access" value="@Model.access">
                                @Html.ValidationMessageFor(model => model.access, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label control-label">Vị trí*</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="location" value="@Model.location">
                                @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group text-left">
                            <button class="btn btn-success btn-tone m-r-5">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div>
                @Html.ActionLink("Quay về", "Index")
            </div>
        </div>
    </div>
}
