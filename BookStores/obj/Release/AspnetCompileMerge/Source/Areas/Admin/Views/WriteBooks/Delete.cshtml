@model BookStores.Models.WriteBook

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>

    <dl class="dl-horizontal">
        <div class="card" style="margin-top:75px;">
            <div class="card-body">
                <h4 class="card-title">Thông tin người viết sách muốn xóa</h4>
                <h2 style="color:red;">@ViewBag.ThongBao</h2>
                <div class="table-responsive">
                    <table class="product-info-table m-t-20">
                        <tbody>
                            <tr>
                                <td>Tên sách:</td>
                                <td>
                                    @Html.DisplayFor(model => model.Book.nameBooks)
                                </td>
                            </tr>
                            <tr>
                                <td>Tên người viết:</td>
                                <td>
                                    @Html.DisplayFor(model => model.Author.nameAuthor)
                                </td>
                            </tr>
                            <tr>
                                <td>Quyền:</td>
                                <td>
                                    @Html.DisplayFor(model => model.access)
                                </td>
                            </tr>
                            <tr>
                                <td>Vị trí:</td>
                                <td>
                                    @Html.DisplayFor(model => model.location)
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>