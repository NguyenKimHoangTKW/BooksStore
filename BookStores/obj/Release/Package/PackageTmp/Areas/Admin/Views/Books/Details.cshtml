@model BookStores.Models.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>

    <dl class="dl-horizontal">
        <div class="card" style=" margin-top: 75px;">
            <div class="card-body">
                <h4 class="card-title">Thông tin sách</h4>
                <div class="table-responsive">
                    <table class="product-info-table m-t-20">
                        <tbody>
                            <tr>
                                <td>Mã sách:</td>
                                <td>
                                    @Html.DisplayFor(model => model.codeBooks)
                                </td>
                            </tr>
                            <tr>
                                <td>Tên sách:</td>
                                <td>
                                    @Html.DisplayFor(model => model.nameBooks)
                                </td>
                            </tr>
                            <tr>
                                <td>Mô tả:</td>
                                <td>
                                    @Html.DisplayFor(model => model.describe)
                                </td>
                            </tr>
                            <tr>
                                <td>Hình ảnh:</td>
                                <td>
                                    <img src="~/Areas/Style/Images/ImagesBooks/@Model.Thumb" style="max-width: 60px" alt="">
                                </td>
                            </tr>
                            <tr>
                                <td>Số lượng:</td>
                                <td>
                                    @Html.DisplayFor(model => model.quantity)
                                </td>
                            </tr>
                            <tr>
                                <td>Giá:</td>
                                <td>
                                    @string.Format("{0:#,0} VNĐ", Model.price)
                                </td>
                            </tr>
                            <tr>
                                <td>Chủ đề sách:</td>
                                <td>
                                    @Html.DisplayFor(model => model.Topic.nameTopic)
                                </td>
                            </tr>
                            <tr>
                                <td>Nhà xuất bản:</td>
                                <td>
                                    @Html.DisplayFor(model => model.Publisher.namePublisher)
                                </td>
                            </tr>
                            <tr>
                                <td>Ngày thêm:</td>
                                <td>
                                    @string.Format("{0:dd-MM-yyyy}", Model.updateDay)
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.idBooks }) |
    @Html.ActionLink("Back to List", "Index")
</p>
