@using BookStores.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Book>
@{
    ViewBag.Title = "BooksByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Page/css")

<div class="container" style="margin-top:73px">
    <div class="bg-white">
        <section class="awe-section-1s">
            <div class="ant-categories row">

            </div>
        </section>
        <section class="awe-section-2s">
            <link rel="preload" as="script" href="~/Style/bizweb.dktcdn.net/100/147/060/themes/880570/assets/flipclockb828.js?1687579687145" />
            <script src="~/Style/bizweb.dktcdn.net/100/147/060/themes/880570/assets/flipclockb828.js?1687579687145" type="text/javascript"></script>
            <div class="ant-block-product">
                <div class="ant-block-product-title">
                    @if (Model.Any())
                    {
                        <a class="ant-titles" href="/" title="@Model.FirstOrDefault().BookCategory.nameBookCat"><img src="~/Style/bizweb.dktcdn.net/100/147/060/themes/880570/assets/Logo_Bookstore.png?1687579687145" alt="@Model.FirstOrDefault().BookCategory.nameBookCat " height="64" width="64" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAADsQAAA7EAZUrDhsAAAANSURBVBhXYzh8+PB/AAffA0nNPuCLAAAAAElFTkSuQmCC" class="lazy img-responsive" />Thể loại @Model.FirstOrDefault().BookCategory.nameBookCat</a>
                    }
                    else
                    {
                <a class="ant-titles" href="/" title="Sách theo thể loại"><img src="~/Style/bizweb.dktcdn.net/100/147/060/themes/880570/assets/Logo_Bookstore.png?1687579687145" alt="Sách theo thể loại " height="64" width="64" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAADsQAAA7EAZUrDhsAAAANSURBVBhXYzh8+PB/AAffA0nNPuCLAAAAAElFTkSuQmCC" class="lazy img-responsive" />Sách theo thể loại</a>

                    }



                    <div class="timer">
                        <div class="time" data-countdown="countdown" data-date="12-25-2022-09-15-45"></div>
                    </div>
                </div>

                <div class="ant-swiper-product row">
                    @foreach (var item in Model)
                    {


                        <div class="col-lg-15 col-md-15 col-sm-4 col-6">


                            <div class="evo-product-block-item">
                                <a href="/" title="Đoàn binh Tây Tiến" class="product-transition">
                                    <img src="~/Areas/Style/Images/ImagesBooks/@item.Thumb" style="image-rendering: pixelated; opacity: 1;" />
                                </a>
                                <div class="product-info">
                                    <a href="@Url.Action("BookDetail","BookStore", new {id=item.idBooks})" title="@item.nameBooks" class="ant-item-product-name">@item.nameBooks</a>
                                    <div class="product__price">


                                        <span class="price">@string.Format("{0:#,0 VNĐ}", item.price)</span>


                                    </div>
                                </div>
                                <a href="@Url.Action("AddCart","Cart", new { ms = item.idBooks, url = Request.Url.ToString() })">
                                    <button class="btn btn-success btn-tone m-r-5" style="height: 37px">
                                        Thêm vào giỏ hàng
                                    </button>
                                </a>
                                <form class="group-buttons d-flex align-items-center justify-content-center variants form-nut-grid form-ajaxtocart">
                                </form>
                            </div>
                        </div>
                    }
                </div>
                <p style="text-align:right"><strong>Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount</strong></p>
                <div class="pagination-container">
                    @Html.PagedListPager(Model, page => Url.Action("BooksByCategory", new { id = ViewBag.idCat, page = page }))
                </div>
            </div>
    </div>
  
    </section>
</div>

