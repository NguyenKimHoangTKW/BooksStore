@using BookStores.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Book>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Page/css")
<div class="container" style=" margin-top: 73px;">
    <div class="bg-white">

        <section class="awe-section-2s">
            <div class="ant-block-product">
                <div class="ant-block-product-title">
                    <a class="ant-titles" href="san-pham-noi-bat.html" title="Toàn bộ sách"><img src="~/Style/bizweb.dktcdn.net/100/147/060/themes/880570/assets/Logo_Bookstore.png?1687579687145" alt="Sách nổi bật " height="64" width="64" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAADsQAAA7EAZUrDhsAAAANSURBVBhXYzh8+PB/AAffA0nNPuCLAAAAAElFTkSuQmCC" class="lazy img-responsive" /> Toàn bộ sách</a>
                    <div class="timer">
                        <div class="time" data-countdown="countdown" data-date="12-25-2022-09-15-45"></div>
                    </div>
                </div>
                <div class="ant-swiper-product row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-15 col-md-15 col-sm-4 col-6">


                            <div class="evo-product-block-item">
                                <a href="@Url.Action("BookDetail","BookStore", new {id=item.idBooks})" title="@item.nameBooks" class="product-transition">
                                    <img src="~/Areas/Style/Images/ImagesBooks/@item.Thumb" style="image-rendering: pixelated; opacity: 1;" />
                                </a>
                                <div class="product-info">
                                    <a href="@Url.Action("BookDetail","BookStore", new {id=item.idBooks})" title="@item.nameBooks" class="ant-item-product-name">@item.nameBooks</a>
                                    <div class="product__price">


                                        <span class="price">@string.Format("{0:#,0 VNĐ}", item.price)</span>


                                    </div>
                                </div>
                                <a href="@Url.Action("AddCart","Cart", new { ms = item.idBooks, url = Request.Url.ToString() })">
                                    <button class="btn btn-success btn-tone m-r-5" style="height: 37px">
                                        Thêm vào giỏ hàng
                                    </button>
                                </a>
                                <form class="group-buttons d-flex align-items-center justify-content-center variants form-nut-grid form-ajaxtocart">

                                    <input type="hidden" name="variantId" value="60462122" />



                                </form>
                            </div>

                        </div>

                    }

                </div>
                <p style="text-align:right"><strong>Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount</strong></p>
                <div class="pagination-container">
                    @Html.PagedListPager(Model, page => Url.Action("GetAllBooksByDefaul", new { page = page }))
                </div>
            </div>

    </div>
    </section>

</div>

